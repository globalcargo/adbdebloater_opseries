pm uninstall -k --user 0 com.facebook.appmanager

pm uninstall -k --user 0 com.facebook.services

pm uninstall -k --user 0 com.facebook.system

# (This is the actual FB app)
pm uninstall -k --user 0 com.facebook.katana

# (This is FB messenger)
pm uninstall -k --user 0 com.facebook.orca

# optional if your rom has IG (a facebook product) installed and you don't want it
pm uninstall -k --user 0 com.instagram.android



